/* components/app_page_nav_bar/index.wxss */
@import "../../styles/index.wxss";

.app_page_nav_bar {
  box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 10px;
  flex-direction: column-reverse;
}

.app_page_nav_bar_not_transparent {
  background-color: white;
}

.app_page_nav_bar_transparent {
  background-color: rgba(0, 0, 0, 0.0);
  position: absolute;
  top: 0;
  left: 0;
  margin: 0 0 auto 0;
  width: 100%;
}

.bar {
  /* background-color: khaki; */
  height: 39px;
  display: flex;
}

/**
 * Copy from :
 * https://stackoverflow.com/questions/72163040/how-to-have-2-overlapping-elements-fill-their-parent
 */
.overlapping_container {
  flex: 1;
  /* border: 5px solid green; */
  display: flex;
  position: relative;
}

.title {
  position: absolute;
  /* border: 1px dashed blue; */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  font-weight: bold;
}

.buttons {
  /* border: 1px solid aqua; */
  /* flex: 1; */
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 0.75rem;
  z-index: 10000;
}

.button_item {
  padding: 3px;
}

.button_item_transparent {
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 6px;
  color: white;
  height: 26px;
  width: 26px;
  display: flex;
}

.btn_icon {
  align-self: center;
  flex-grow: 1;
  flex-basis: auto;
  width: 20px;
  height: 20px;
}