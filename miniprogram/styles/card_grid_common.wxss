.card_grid_common {
  max-width: 100%;
  display: grid;
  padding: 0.5rem;
  grid-template-columns: repeat(auto-fit, minmax(0, 1fr));
  grid-template-rows: repeat(auto-fit, minmax(0, 1fr));
  grid-column-gap: 10px;
  grid-row-gap: 10px;
}

.card_grid_maxheight {
  padding: 0 !important;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}