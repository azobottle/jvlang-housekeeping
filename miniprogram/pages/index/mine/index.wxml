<view style="padding: 15px;">
  <view wx:if="{{store.user}}" class="rows" style="gap: 15px;">
    <card>
      <view style="padding-bottom: 20px;">
        <view class="rows" style="gap: 25px;">
          <view style="display: flex;flex-direction: row;gap: 20px;margin-top: 20px">
            <image style="width: 20vw;height: 20vw;border-radius: 50%;" src="https://picsum.photos/200/200?random=1" />
            <view style="display: flex;flex-direction: column;gap: 6px;">
              <view style="font-size: 1rem;font-weight: 600;letter-spacing: 1px;">张三</view>
              <tag>星级客户</tag>
            </view>
          </view>
          <btn>邀请有奖</btn>
          <!-- <view class="columns" style="gap: 25px;">
          <btn style="flex:1">我的订单</btn>
          <btn style="flex:1">收藏</btn>
        </view> -->
        </view>
      </view>
    </card>
    <card>
      <view class="card_box">
        <view class="columns">
          <view class="card_box_header">我的订单</view>
          <view class="card_box_header_link">全部 →</view>
        </view>
        <view class="g4c">
          <icon_btn icon_src="/assets/mdi/payment_black_24dp.svg" text="待付款" />
          <icon_btn icon_src="/assets/mdi/cleaning_services_black_24dp.svg" text="待服务" />
          <icon_btn icon_src="/assets/mdi/assignment_turned_in_black_24dp.svg" text="待验收" />
          <icon_btn icon_src="/assets/mdi/restore_black_24dp.svg" text="待评价" />
          <icon_btn icon_src="/assets/mdi/restore_black_24dp.svg" text="售后" />
        </view>
      </view>
    </card>

    <card>
      <view class="card_box">
        <view class="card_box_header">我的设置</view>
        <view class="g4c">
          <icon_btn icon_src="/assets/mdi/maps_home_work_black_24dp.svg" text="地址与联系方式" />
          <!-- <icon_btn icon_src="/assets/mdi/star_outline_black_24dp.svg" text="收藏" /> -->
          <!-- <icon_btn icon_src="/assets/mdi/restore_black_24dp.svg" text="足迹" /> -->
        </view>
      </view>
    </card>
    <card>
      <view class="card_box">
        <view class="card_box_header">其他</view>
      </view>
    </card>
    <card>
      <btn bind:tap="logout">退出登陆</btn>
    </card>
  </view>
  <view wx:else style="height: 80vh;" class="flex_center">
    <need_login style="width: 80vw;" />
  </view>

</view>