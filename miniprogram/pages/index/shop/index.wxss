/* pages/index/shop/index.wxss */
@import "../../../styles/index.wxss";

.tabs {
  letter-spacing: 1px;
}

.tab {
  width: calc(25vw - 5px);
  padding: 15px 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.6s;
}

@keyframes fadeIn {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

.not_checked {
  background-color: #f3f3f3;
  color: gray;
}

.checked_parent {
  background-color: orange;
  color: white;
}

